<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.college">
	<class name='Academy' table="academy">
		<id name="ID" type="long" column="ID">
			<generator class="increment" />
		</id>
		<property name="name" type="string" column="name" />
		
		<set name="students" cascade="all">
				<key column="assign_id" />
				<one-to-many class="com.college.Students" />
		</set>
		
		<list name="teachers" cascade="all">
				<key column="assigned_id" />
				<list-index column="idx" />
				<one-to-many class="com.college.Teachers" />
		</list>
		
		<list name="class" cascade="all">
				<key column="assigned_id" />
				<list-index column="idx" />
				<one-to-many class="com.college.Class" />
		</list>
		
		<list name="subjects" cascade="all">
				<key column="assign_id" />
				<list-index column="idx" />
				<one-to-many class="com.college.subjects" />
		</list>
	</class>
</hibernate-mapping>